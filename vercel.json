{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/login",
      "destination": "/api/login.php"
    },
    {
      "source": "/produk",
      "destination": "/api/lihat_produk.php"
    },
    {
      "source": "/tentang",
      "destination": "/api/tentang.php"
    },
    {
      "source": "/",
      "destination": "/api/index.php"
    }
  ]
}