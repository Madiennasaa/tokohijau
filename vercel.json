{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },

    { "src": "/login", "dest": "/api/login_form.php" },
    { "src": "/register", "dest": "/api/register.php" },
    { "src": "/dashboard", "dest": "/api/dashboard.php" },
    { "src": "/keranjang", "dest": "/api/keranjang.php" },
    { "src": "/checkout", "dest": "/api/checkout.php" },
    { "src": "/tentang", "dest": "/api/tentang.php" },
    { "src": "/kontak", "dest": "/api/kontak.php" },
    { "src": "/lihat_produk", "dest": "/api/lihat_produk.php" },

    { "src": "/", "dest": "/api/index.php" }
  ]
}
